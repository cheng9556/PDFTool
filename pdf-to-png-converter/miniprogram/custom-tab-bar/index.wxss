.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  background: white;
  display: flex;
  padding: 8rpx 0;
  border-top: 1px solid #eee;
  z-index: 1000;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #888;
  font-size: 24rpx; /* 增大字体 */
}

.tab-item.active {
  color: #1a6dff;
}

.tab-item .icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 4rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

