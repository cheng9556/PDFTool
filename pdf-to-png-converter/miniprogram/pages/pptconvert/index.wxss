.container {
  padding: 24rpx;
  min-height: 100vh;
  background: linear-gradient(to bottom, #f0f9ff 0%, #e0f2fe 100%);
  padding-bottom: 40rpx;
}

.section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(59, 130, 246, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 16rpx;
  text-align: center;
}

.tips {
  background: #f0f6ff;
  color: #3b82f6;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  margin-bottom: 32rpx;
  line-height: 1.8;
}

.tips view {
  margin: 8rpx 0;
}

/* 文件上传区域 */
.upload-area {
  border: 3rpx dashed #3b82f6;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  margin-bottom: 32rpx;
  transition: all 0.3s;
}

.upload-area:active {
  transform: scale(0.98);
  background: #dbeafe;
}

.upload-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 24rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #1e293b;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #64748b;
}

/* 文件信息 */
.file-info {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 28rpx;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.file-item:last-child {
  border-bottom: none;
}

.file-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

.file-value {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 600;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.convert-direction {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  letter-spacing: 2rpx;
}

/* 转换按钮 */
.convert-btn {
  width: 100%;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s;
}

.convert-btn:active {
  transform: scale(0.98);
}

.convert-btn.disabled {
  background: #cbd5e1;
  box-shadow: none;
}

/* 结果区域 */
.result-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(16, 185, 129, 0.15);
  animation: slideIn 0.4s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-header {
  text-align: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #e0f2fe;
}

.success-icon {
  font-size: 80rpx;
  color: #10b981;
  display: block;
  margin-bottom: 16rpx;
}

.success-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
}

.result-info {
  background: #f8fafc;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.result-label {
  font-size: 26rpx;
  color: #64748b;
}

.result-value {
  font-size: 26rpx;
  color: #1e293b;
  font-weight: 600;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.result-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.preview-btn {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

.reset-btn {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.3);
}

/* 帮助说明 */
.help-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(59, 130, 246, 0.1);
}

.help-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
}

.help-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.help-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx;
  background: #f8fafc;
  border-radius: 12rpx;
}

.help-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.help-text {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.6;
  flex: 1;
}

