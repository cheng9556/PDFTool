<view class="wrap">
  <view class="panel">
    <view class="h1">增删页/排序</view>
    <view class="uploader" bindtap="choosePdf">点击选择PDF文件</view>
    <view class="row">顺序（用逗号写页码，如 2,1,3，留空=不改变）</view>
    <input class="input" placeholder="如: 2,1,3" value="{{order}}" bindinput="onOrder"/>
  </view>
  <view class="footer">
    <view>{{filename || '未选择文件'}}</view>
    <button type="primary" bindtap="submit" disabled="{{!tempFilePath}}">开始处理</button>
  </view>
</view>


