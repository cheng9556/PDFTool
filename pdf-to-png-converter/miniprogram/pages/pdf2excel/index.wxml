<view class="container">
  <view class="section">
    <view class="title">PDF转Excel</view>
    <view class="desc">将PDF文件中的表格内容转换为Excel格式</view>
    
    <view class="upload-area" bindtap="chooseFile">
      <image class="upload-icon" src="data:image/svg+xml;base64,"></image>
      <view class="upload-text">点击选择PDF文件</view>
      <view class="upload-hint">支持30MB以内的PDF文件</view>
    </view>
    
    <view wx:if="{{fileName}}" class="file-info">
      <text class="file-name">📄 {{fileName}}</text>
      <text class="file-size">{{fileSize}}</text>
    </view>
    
    <button 
      class="convert-btn {{converting ? 'disabled' : ''}}" 
      bindtap="convertToExcel"
      disabled="{{converting || !pdfFile}}"
    >
      {{converting ? '转换中...' : '开始转换'}}
    </button>
    
    <view wx:if="{{excelUrl}}" class="result">
      <view class="success-icon">✓</view>
      <view class="success-text">转换成功！</view>
      <button class="download-btn" bindtap="downloadExcel">下载Excel文件</button>
    </view>
    
    <view wx:if="{{error}}" class="error">
      <text>❌ {{error}}</text>
    </view>
  </view>
</view>

