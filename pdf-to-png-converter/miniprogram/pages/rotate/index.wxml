<view class="wrap">
  <view class="panel">
    <view class="h1">旋转页面</view>
    <view class="uploader" bindtap="choosePdf">点击选择PDF文件</view>
    <view class="row">
      <text>角度</text>
      <picker mode="selector" range="{{angles}}" bindchange="onAngle"><view class="picker">{{angles[angleIndex]}}</view></picker>
    </view>
    <view class="row">
      <text>页码(逗号分隔，留空=全部)</text>
    </view>
    <input class="input" placeholder="如: 1,3,5" value="{{pages}}" bindinput="onPages"/>
  </view>
  <view class="footer">
    <view>{{filename || '未选择文件'}} </view>
    <button type="primary" bindtap="submit" disabled="{{!tempFilePath}}">开始旋转</button>
  </view>
</view>


