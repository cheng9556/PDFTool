.container {
  padding: 24rpx;
  min-height: 100vh;
  background: #f8f8f8;
}

.section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.upload-area {
  border: 2rpx dashed #d9d9d9;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  background: #fafafa;
  margin-bottom: 32rpx;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #1a6dff;
  margin-bottom: 12rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

.file-info {
  background: #f0f7ff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-size {
  font-size: 24rpx;
  color: #666;
  margin-left: 16rpx;
}

.convert-btn {
  width: 100%;
  background: linear-gradient(135deg, #1a6dff 0%, #0d5cd9 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.convert-btn.disabled {
  background: #ccc;
}

.result {
  margin-top: 40rpx;
  text-align: center;
  padding: 40rpx;
  background: #f0f9ff;
  border-radius: 16rpx;
}

.success-icon {
  font-size: 80rpx;
  color: #52c41a;
  margin-bottom: 20rpx;
}

.success-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 32rpx;
}

.download-btn {
  background: #52c41a;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

.error {
  margin-top: 32rpx;
  padding: 24rpx;
  background: #fff2f0;
  border-radius: 12rpx;
  color: #ff4d4f;
  font-size: 28rpx;
  text-align: center;
}
