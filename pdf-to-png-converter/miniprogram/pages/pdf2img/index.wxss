.container {
  padding: 24rpx;
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 40rpx;
}

.section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.tips {
  background: #f0f6ff;
  color: #3b82f6;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  margin-bottom: 24rpx;
}

.tips view {
  margin: 6rpx 0;
}

/* 文件上传区域 */
.upload-area {
  border: 2rpx dashed #d9d9d9;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  background: #fafafa;
  margin-bottom: 32rpx;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #1a6dff;
  margin-bottom: 12rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

.file-info {
  background: #f0f7ff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-size {
  font-size: 24rpx;
  color: #666;
  margin-left: 16rpx;
}

/* 配置选项 */
.opts { 
  margin-top: 20rpx;
  margin-bottom: 32rpx;
}

.row { 
  display: flex; 
  justify-content: space-between; 
  align-items: center; 
  padding: 12rpx 0; 
}

.row text:first-child {
  font-size: 28rpx;
  color: #333;
}

.picker { 
  color: #1a6dff;
  font-weight: 500;
  font-size: 28rpx;
}

.quality {
  color: #1a6dff;
  font-weight: 600;
  font-size: 28rpx;
}

.slider {
  width: 100%;
  margin: 8rpx 0;
}

/* 转换按钮 */
.convert-btn {
  width: 100%;
  background: linear-gradient(135deg, #1a6dff 0%, #0d5cd9 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.convert-btn.disabled {
  background: #ccc;
}

/* 图片展示区域 */
.images-panel {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.images-header {
  background: #f0f7ff;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.images-header text {
  font-size: 26rpx;
  color: #1a6dff;
  font-weight: 500;
}

.thumbs { 
  display: grid; 
  grid-template-columns: repeat(3, 1fr); 
  gap: 16rpx; 
  margin-bottom: 24rpx;
}

.thumb-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.thumb { 
  width: 100%; 
  height: 200rpx; 
  border-radius: 12rpx;
  background: #f8f8f8;
  border: 1rpx solid #e8e8e8;
}

.thumb-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 12rpx;
  margin-bottom: 8rpx;
}

.save-btn {
  width: 100%;
  background: #1a6dff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  padding: 8rpx 0;
  height: auto;
  line-height: normal;
  border: none;
}

/* 分页控制 */
.pagination {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  margin-bottom: 16rpx;
}

.page-btn {
  background: #fff;
  color: #1a6dff;
  border: 1rpx solid #1a6dff;
  border-radius: 8rpx;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  height: auto;
  line-height: normal;
}

.page-btn[disabled] {
  color: #ccc;
  border-color: #e8e8e8;
  background: #f8f8f8;
}

.page-info {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.batch-save-btn {
  width: 100%;
  background: #52c41a;
  color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
}
