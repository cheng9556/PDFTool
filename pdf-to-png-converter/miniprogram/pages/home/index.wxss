.home { 
  padding: 0 24rpx 24rpx 24rpx; 
  padding-bottom: 120rpx; /* 为底部tabBar留出空间 */
}

.banner { 
  background: linear-gradient(135deg, #1a6dff 0%, #0d5cd9 100%);
  color: white;
  padding: 30rpx 30rpx 50rpx 30rpx; /* 上小下大，文字位置下移 */
  padding-top: calc(70rpx + env(safe-area-inset-top)); /* 适配刘海屏，增加顶部间距 */
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  margin: 0 -24rpx 24rpx -24rpx; /* 延伸到屏幕边缘 */
}

.card { 
  background: white;
  margin-bottom: 20rpx; /* 减少卡片间距 */
  border-radius: 20rpx;
  padding: 24rpx; /* 减少内边距 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title { 
  font-size: 28rpx; /* 缩小标题字号 */
  font-weight: 600;
  margin-bottom: 20rpx; /* 减少标题下方间距 */
  color: #333;
  display: flex;
  align-items: center;
}

.card-title .title-icon {
  width: 32rpx; /* 标题图标尺寸 */
  height: 32rpx;
  margin-right: 12rpx; /* 图标和文字间距 */
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  flex-shrink: 0; /* 防止图标被压缩 */
}

.menu { 
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx; /* 减少item间距 */
}

.menu-item { 
  text-align: center;
  padding: 12rpx 4rpx; /* 减少内边距 */
  border-radius: 16rpx;
  transition: all 0.2s;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx; /* 减少图标和文字间距 */
}

.menu-item .icon { 
  width: 44rpx; /* 稍微减小图标尺寸 */
  height: 44rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  display: block;
  margin-bottom: 4rpx;
}

.menu-item .label { 
  font-size: 24rpx; /* 增大文字字号 */
  color: #555;
  white-space: nowrap; /* 强制单行显示 */
  overflow: hidden; /* 超出隐藏 */
  text-overflow: ellipsis; /* 超出显示省略号 */
  max-width: 100%; /* 限制最大宽度 */
  line-height: 1.3; /* 适当增加行高 */
}


